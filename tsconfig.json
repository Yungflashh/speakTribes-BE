{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"]

  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}
